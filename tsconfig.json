{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2016",
    "module": "ES2022",
    "importHelpers": false,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["types"]
  },
  "exclude": ["node_modules", "build"]
}
